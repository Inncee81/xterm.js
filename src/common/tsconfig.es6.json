{
  "extends": "../../tsconfig.es6.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom", "dom.iterable"],
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "outDir": "../../out-es6"
  },
  "include": ["../../typings/xterm.d.ts", "**/*.ts", "**/*.d.ts"],
  "exclude": ["**/*.test.ts"]
}
